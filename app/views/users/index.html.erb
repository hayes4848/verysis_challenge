<div class="container text-center">
	<h1 >Users Index Page</h1>

<div class="row">
	
	<div class="col-md-12"><%= link_to "Add a new Contact", new_user_path %></div>
		<% @users.each do |user| %>
	<div class="row ">
		<div class="col-md-5 boxed text-center">
			<%= link_to "#{user.first_name + user.last_name}", user_path(user) %>
			

			<%= link_to "Edit Contact", edit_user_path(user) %>
			<%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		</div>
		<% end %>
	</div>
</div>
